@model IEnumerable<gestionPharmacieApp.Models.Vente>

@{
    ViewData["Title"] = "Liste des ventes";
}

<h1>Index</h1>


<!-- Formulaire de recherche -->
<form asp-action="Search" method="get" class="d-flex align-items-center mb-3">
    <label for="searchType" class="mr-2 font-weight-bold">Rechercher par :</label>
    <select id="searchType" name="searchType" class="form-control mr-3" style="width: auto;">
        <option value="cin">CIN</option>
        <option value="libelle">Libelle</option>
    </select>
    <input type="text" name="keyword" class="form-control flex-grow-1 mr-3" placeholder="Mot-clé" required />
    <button type="submit" class="btn btn-primary">Rechercher</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateVente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdClientNavigation.Cin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReferenceNavigation.Libelle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdFacture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateVente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdClientNavigation.Cin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceNavigation.Libelle)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdFacture)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdVente" class="btn btn-info btn-sm">Détails</a>
                </td>
        </tr>
}
    </tbody>
</table>
