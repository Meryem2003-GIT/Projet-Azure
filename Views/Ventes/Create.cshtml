@model gestionPharmacieApp.Models.Vente

@{
    ViewData["Title"] = "Créer une vente";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow" style="width: 90%;height: 90%">
        <div class="card-header text-white" style="background-color: #4B5920;">
            <h3 class="card-title text-center">Créer une vente</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="row">
                    <div class="col-sm-6 font-weight-bold">
                        <label asp-for="Reference" class="control-label"></label>
                    </div>
                    <div class="col-sm-6">
                        <select asp-for="Reference" class="form-control" asp-items="ViewBag.Reference"></select>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-6 font-weight-bold">
                        <label asp-for="Quantite" class="control-label"></label>
                    </div>
                    <div class="col-sm-6">
                        <input asp-for="Quantite" class="form-control" />
                        <span asp-validation-for="Quantite" class="text-danger"></span>
                    </div>
                </div>
                <input type="hidden" asp-for="IdClient" />
                <div class="row mt-4">
                    <div class="col-12 text-center">
                        <input type="submit" value="Ajouter le produit" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}