@model gestionPharmacieApp.Models.ProduitDetailsViewModel

@{
    ViewData["Title"] = "Détails et Gestion des Produits";
}

<h1>Détails du Produit Sélectionné</h1>

<div>
    <h4>Produit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProduitSelectionne.Reference)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProduitSelectionne.Reference)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProduitSelectionne.DescriptionP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProduitSelectionne.DescriptionP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProduitSelectionne.Libelle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProduitSelectionne.Libelle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProduitSelectionne.Prix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProduitSelectionne.Prix)
        </dd>
    </dl>

    <!-- Boutons Modifier et Supprimer -->
    <a asp-action="Edit" asp-route-id="@Model.ProduitSelectionne.Reference" class="btn btn-warning">Modifier</a>
    <a asp-action="Delete" asp-route-id="@Model.ProduitSelectionne.Reference" class="btn btn-danger">Supprimer</a>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    <a asp-action="CommanderProduit" asp-route-id="@Model.ProduitSelectionne.Reference" class="btn btn-primary">Commander</a>
</div>
