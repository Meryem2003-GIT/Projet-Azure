@model gestionPharmacieApp.Models.Produit

@{
    ViewData["Title"] = "Détails du Produit";
}

<h1>Détails du Produit</h1>

<div>
    <h4>Produit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reference)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reference)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescriptionP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescriptionP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Libelle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Libelle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prix)
        </dd>
    </dl>

    <!-- Boutons Modifier et Supprimer -->
    <a asp-action="Edit" asp-route-id="@Model.Reference" class="btn btn-warning">Modifier</a>
    <form asp-action="Delete" asp-route-id="@Model.Reference" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger">Supprimer</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>
