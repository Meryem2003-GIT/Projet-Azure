@model IEnumerable<gestionPharmacieApp.Models.Fournisseur>

@{
    ViewData["Title"] = "Liste des Fournisseurs";
}

<h1 class="text-center">Liste des Fournisseurs</h1>

<!-- Bouton pour créer un nouveau fournisseur -->
<div class="mb-4 text-left">
    <a asp-action="Create" class="btn btn-success">Créer un nouveau fournisseur</a>
</div>

<!-- Formulaire de recherche -->
<form method="get" asp-action="Index" class="d-flex align-items-center mb-3">
    <label for="searchType" class="mr-2 font-weight-bold">Rechercher par :</label>
    <select id="searchType" name="searchType" class="form-control mr-3" style="width: auto;">
        <option value="IdFournisseur">Id Fournisseur</option>
        <option value="NomSociete">Nom Société</option>
        <option value="Email">Email</option>
    </select>
    <input type="text" name="keyword" class="form-control flex-grow-1 mr-3" placeholder="Mot-clé" />
    <button type="submit" class="btn btn-primary">Rechercher</button>
</form>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Id Fournisseur</th>
            <th>Nom Société</th>
            <th>Adresse</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fournisseur in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => fournisseur.IdFournisseur)</td>
                <td>@Html.DisplayFor(modelItem => fournisseur.NomSociete)</td>
                <td>@Html.DisplayFor(modelItem => fournisseur.Adresse)</td>
                <td>@Html.DisplayFor(modelItem => fournisseur.Email)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@fournisseur.IdFournisseur" class="btn btn-info btn-sm">Détails</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    
