<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Duo Santé</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">  
    <style>

        body, html {
            margin: 0;
            padding: 0;
            overflow: hidden; /* Supprime la barre de défilement */
            height: 100vh; /* Assure que la hauteur occupe tout l'écran */
        }

        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        nav {
            width: 250px;
            height: 100vh;
            background-color: #6c7c54; 
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            nav h3, nav h5 {
                font-family: Georgia, serif;
                text-align: center;
                margin: 10px 0;
            }

            nav ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

                nav ul li {
                    margin: 15px 0;
                    text-align: left;
                    padding-left: 10px;
                }

                    nav ul li a {
                        font-family: Georgia, serif; /* Police de caractères */
                        font-weight: bold; /* Texte en gras */
                        text-decoration: none;
                        color: white;
                        display: flex;
                        align-items: center;
                    }

                        nav ul li a img {
                            width: 30px; /* Taille des icônes */
                            height: 30px;
                            margin-right: 10px; /* Espacement entre l'icône et le texte */
                        }

                        nav ul li a:hover {
                            font-family: Georgia, serif; /* Police de caractères */
                            font-weight: bold; /* Texte en gras */
                            background-color: white; /* Couleur de survol */
                            padding-left: 20px; /* Animation légère de survol */
                            color: black;
                            transition: 0.3s ease-in-out;
                        }

        .logout {
            margin-top: auto;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Menu latéral -->
        <nav>
            <div>
                <h3>Parapharmacie</h3>
                <h5>Duo Santé</h5>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <!-- Insère ton image ici pour Dashboard -->
                        <img src="~/images/dashboard.png" alt="Dashboard Icon"> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Produits" asp-action="Index">
                        <!-- Insère ton image ici pour Gestion des produits -->
                        <img src="~/images/gestionproduit.png" alt="Gestion des Produits Icon"> Produits
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Stocks" asp-action="Index">
                        <!-- Insère ton image ici pour Gestion du stock -->
                        <img src="~/images/gestionstock.png" alt="Gestion du Stock Icon"> Stock
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Fournisseurs" asp-action="Index">
                        <!-- Insère ton image ici pour Gestion des fournisseurs -->
                        <img src="~/images/gestionfournisseur.png" alt="Gestion des Fournisseurs Icon"> Fournisseurs
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Commandes" asp-action="Index">
                        <!-- Insère ton image ici pour Gestion des commandes -->
                        <img src="~/images/gestioncommande.png" alt="Gestion des Commandes Icon"> Commandes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Ventes" asp-action="Index">
                        <!-- Insère ton image ici pour Gestion des ventes -->
                        <img src="~/images/gestionvente.png" alt="Gestion des Ventes Icon"> Ventes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Auth" asp-action="Logout">
                        <!-- Insère ton image ici pour Quitter la session -->
                        <img src="~/images/logout.png" alt="Logout Icon"> Quitter la session
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Contenu principal -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
