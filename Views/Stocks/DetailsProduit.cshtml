@model gestionPharmacieApp.Models.Produit

@{
    ViewData["Title"] = "Détails du Produit";
}

<h1>Détails du Produit</h1>

<div>
    <h4>Produit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Référence</dt>
        <dd class="col-sm-10">@Model.Reference</dd>

        <dt class="col-sm-2">Libellé</dt>
        <dd class="col-sm-10">@Model.Libelle</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.DescriptionP</dd>

        <dt class="col-sm-2">Prix</dt>
        <dd class="col-sm-10">@Model.Prix</dd>
    </dl>

    <a asp-action="Index" class="btn btn-secondary">Retour à la liste des stocks</a>
</div>
