@model IEnumerable<gestionPharmacieApp.Models.Stock>

@{
    ViewData["Title"] = "Liste des Stocks";
}

<h1 class="text-center">Liste des Stocks</h1>

<!-- Formulaire de recherche -->
<form method="get" asp-action="Index" class="d-flex align-items-center mb-3">
    <label for="searchType" class="mr-2 font-weight-bold">Rechercher par :</label>
    <select id="searchType" name="searchType" class="form-control mr-3" style="width: auto;">
        <option value="IdStock">Id Stock</option>
        <option value="Reference">Référence Produit</option>
    </select>
    <input type="text" name="keyword" class="form-control flex-grow-1 mr-3" placeholder="Mot-clé" />
    <button type="submit" class="btn btn-primary">Rechercher</button>
</form>

<!-- Tableau des stocks -->
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Id Stock</th>
            <th>Référence Produit</th>
            <th>Libellé Produit</th>
            <th>Quantité</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stock in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => stock.IdStock)</td>
                <td>@Html.DisplayFor(modelItem => stock.Reference)</td>
                <td>@Html.DisplayFor(modelItem => stock.ReferenceNavigation.Libelle)</td>
                <td>@Html.DisplayFor(modelItem => stock.Quantite)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@stock.IdStock" class="btn btn-info btn-sm">Détails</a>
                </td>
            </tr>
        }
    </tbody>
</table>
