@model IEnumerable<gestionPharmacieApp.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                CIN
            </th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Points de fidélité</th>
            <th>Remise</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cin)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CinNavigation.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CinNavigation.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProgFidelites.Points)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProgFidelites.Remise)
                </td>
                
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdClient">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdClient">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdClient">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
