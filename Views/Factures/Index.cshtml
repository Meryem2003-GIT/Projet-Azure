@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Liste des Factures";
}




<h1 class="my-4 text-center ">@ViewData["Title"]</h1>


<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Facture ID</th>
                <th>Total Facture</th>
                <th>Date de Vente</th>
                <th>Quantité</th>
                <th>Produit</th>
                <th>Prix Unitaire</th>
                <th>Client</th>
                <th>Email Client</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var facture in Model)
            {
                <tr>
                    <td>@facture.FactureId</td>
                    <td>@facture.TotalFacture.ToString("C")</td> <!-- Format en devise -->
                    <td>@facture.DateVente.ToString("dd/MM/yyyy")</td> <!-- Format de date -->
                    <td>@facture.Quantite</td>
                    <td>@facture.ProduitLibelle</td>
                    <td>@facture.ProduitPrix.ToString("C")</td> <!-- Format en devise -->
                    <td>@facture.ClientNom</td>
                    <td>@facture.ClientEmail</td>
                </tr>
            }
        </tbody>
    </table>
</div>

