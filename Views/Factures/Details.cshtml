@model IEnumerable<gestionPharmacieApp.Models.ProduitFacture>

@{
    ViewData["Title"] = "Produits de la Facture";
}

<h2>Produits de la Facture</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Référence</th>
            <th>Libellé</th>
            <th>Description</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Reference</td>
                <td>@item.Libelle</td>
                <td>@item.Description</td>
                <td>@item.Prix</td>
                <td>@item.Quantite</td>
                <td>@(item.Prix * item.Quantite)</td>
            </tr>
        }
    </tbody>
</table>