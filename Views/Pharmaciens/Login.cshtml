@model gestionPharmacieApp.Models.LoginModel
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Connexion";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Vue spécifique</title>
    <link href="~/css/custom-style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style1.css" />
</head>
<body>

<div class="login-container">
    <div class="login-card">
        <h2 class="login-title">Bienvenue</h2>
        <p class="login-subtitle">Connectez-vous à votre compte</p>
        <form asp-action="Login" method="post">
            <div class="input-group">
                <i class="fa fa-envelope"></i>
                
                <input asp-for="Email" class="form-control" placeholder="Entrez votre email" />
                <span asp-validation-for="Email" class="error"></span>
            </div>
            <div class="input-group">
                
                <input asp-for="Password" type="password" class="form-control" placeholder="Entrez votre mot de passe" />
                <span asp-validation-for="Password" class="error"></span>
            </div>
            <button type="submit" class="btn btn-login">Se Connecter</button>
            <div class="links">
               
            </div>
        </form>
    </div>
</div>
</body>
</html>
