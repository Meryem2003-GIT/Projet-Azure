@model IEnumerable<gestionPharmacieApp.Models.Commande>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCommande)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdFournisseurNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReferenceNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCommande)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdFournisseurNavigation.IdFournisseur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceNavigation.Reference)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCommande">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCommande">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCommande">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
